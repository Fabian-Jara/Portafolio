---
import Layout from "../layouts/Layout.astro";

import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";

import BriefcaseIcon from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
---

<Layout
  title="portafolio de Fabian - Ingeniero en Informática Mención Desarrollo de Sistemas - Desarrollador y Programador Web Junior"
  description="Contrata a Fabian Jara para Crear tu Aplicación. Ingeniero Informático, Desarrollador y Programador Web. Especialista en Crear Aplicación Únicas"
>
  <main class="ml-4 mr-4">
    <SectionContainer id="Inicio" class="flex justify-center sm:mt-32 mt-24">
      <Hero />
    </SectionContainer>

    <SectionContainer
      id="experiencia"
      class="rounded-xl backdrop-blur-sm bg-green-200/20 sm:mt-52 mt-28"
    >
      <h2
        class="flex items-center py-4 px-4 mb-6 text-3xl font-semibold text-white"
      >
        <BriefcaseIcon class="size-8 mr-4" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer
      id="proyectos"
      class="backdrop-blur-md bg-green-200/20 rounded-xl py-4 px-4"
    >
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>

