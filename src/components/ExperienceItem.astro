---
interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
}

const { title, company, description, date } = Astro.props
---

<div
  class="relative sm:mx-12 mx-7 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 dark:before:border-white/15 before:border-black/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-green-600 dark:text-green-400 -left-[42px] absolute rounded-full text-5xl sm:text-6xl"
        >&bull;</span
      >

      <h3 class="sm:text-2xl text-xl font-bold text-green-600 dark:text-green-400">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-900 dark:text-white">{company}</h4>
      <time class="p-0 m-0 text-sm text-gray-800 dark:text-gray-300">{date}</time>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-gray-900 dark:text-white sm:text-xl text-md md:col-span-3">
    {description}
    
  </div>
</div>


