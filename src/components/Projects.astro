---
import WordPressIcon from "./icons/WordPress.astro";
import CssIcon from "./icons/Css.astro";
import ElementorIcon from "./icons/Elementor.astro";
import GitHubIcon from "./icons/GitHub.astro";
import WebSiteIcon from "./icons/WebSite.astro";
import LinkIcon from "./icons/Link.astro";

import LinkButton from "./LinkButton.astro";
import SocialPill from "./SocialPill.astro";

const TAGS = {
  WORDPRESS: {
    name: "WordPress",
    class: "bg-[#012638] text-white",
    icon: WordPressIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#012638] text-white",
    icon: CssIcon,
  },
  ELEMENTOR: {
    name: "Elementor",
    class: "bg-[#2b0000] text-white",
    icon: ElementorIcon,
  },
};

const PROJECTS = [
  {
    title: "The Marmol House",
    description:
      "Se rediseño la página para alinearla con la identidad de la marca, utilizando WordPress, CSS y Elementor para mejorar su apariencia y funcionalidad.",
    link: "https://www.marmolhouse.cl/",
    github: "",
    image: "/public/projects/marmolhouse.webp",
    tags: [TAGS.WORDPRESS, TAGS.CSS, TAGS.ELEMENTOR],
  },
  {
    title: "Antilhue Intranet",
    description:
      'Fue diseñada usando Python, MySQL y Bootstrap, combina varias páginas internas en una sola y proporciona información adicional. Incluye un sistema de gestión de contenido con CRUD y administra el inventario de objetos de oficina.',
    link: "",
    github: "",
    image: "/public/projects/antilhue.webp",
    tags: [TAGS.WORDPRESS, TAGS.CSS, TAGS.ELEMENTOR],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-200">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <SocialPill href={github}>
                  <GitHubIcon class="size-6" />
                  Code
                </SocialPill>
              )}
              {link && (
                <SocialPill href={link}>
                  <LinkIcon class="size-4" />
                  Preview
                </SocialPill>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
